#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>

int main() {
    int n, i, j, temp;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter elements:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    pid_t pid = fork(); // create child process

    if (pid < 0) {
        printf("Fork failed!\n");
        return 1;
    }

    // Parent process
    if (pid > 0) {
        // Sort array (simple bubble sort)
        for (i = 0; i < n - 1; i++) {
            for (j = i + 1; j < n; j++) {
                if (arr[i] > arr[j]) {
                    temp = arr[i];
                    arr[i] = arr[j];
                    arr[j] = temp;
                }
            }
        }

        // Prepare arguments for execve
        char *args[n + 2]; // +2 for program name and NULL
        args[0] = "./reverse"; // name of second program
        for (i = 0; i < n; i++) {
            char *num = malloc(10);
            sprintf(num, "%d", arr[i]);
            args[i + 1] = num;
        }
        args[n + 1] = NULL;

        // Wait a moment before execve (optional)
        sleep(1);

        // Execute child program with sorted array
        execve("./reverse", args, NULL);

        printf("execve failed!\n");
    } 
    else {
        // Child just waits for parent to finish exec
        sleep(5);
    }

    return 0;
}

#child     





#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    if (argc < 2) {
        printf("No array elements received!\n");
        return 0;
    }

    printf("\nChild process displaying array in reverse order:\n");
    for (int i = argc - 1; i > 0; i--) {
        printf("%s ", argv[i]);
    }
    printf("\n");

    return 0;
}

