#include <stdio.h>

int findLRU(int time[], int n) {
    int i, min = time[0], pos = 0;
    for (i = 1; i < n; i++) {
        if (time[i] < min) {
            min = time[i];
            pos = i;
        }
    }
    return pos;
}

int main() {
    int n, i, j, k, frames = 3;
    int pages[30];
    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    int choice;
    while (1) {
        printf("\n===== PAGE REPLACEMENT MENU =====\n");
        printf("1. FCFS\n2. LRU\n3. Optimal\n4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        if (choice == 4)
            break;

        int frame[10], count = 0, pageFaults = 0;
        for (i = 0; i < frames; i++)
            frame[i] = -1;

        if (choice == 1) {
            // ---------- FCFS ----------
            printf("\nFCFS Page Replacement\n");
            int index = 0;
            for (i = 0; i < n; i++) {
                int flag = 0;
                for (j = 0; j < frames; j++) {
                    if (frame[j] == pages[i]) {
                        flag = 1;
                        break;
                    }
                }
                if (flag == 0) {
                    frame[index] = pages[i];
                    index = (index + 1) % frames;
                    pageFaults++;
                }
                printf("Frames: ");
                for (k = 0; k < frames; k++)
                    if (frame[k] != -1) printf("%d ", frame[k]);
                printf("\n");
            }
            printf("Total Page Faults = %d\n", pageFaults);
        }

        else if (choice == 2) {
            // ---------- LRU ----------
            printf("\nLRU Page Replacement\n");
            int time[10], counter = 0;
            for (i = 0; i < n; i++) {
                int flag1 = 0, flag2 = 0;
                for (j = 0; j < frames; j++) {
                    if (frame[j] == pages[i]) {
                        counter++;
                        time[j] = counter;
                        flag1 = flag2 = 1;
                        break;
                    }
                }
                if (flag1 == 0) {
                    for (j = 0; j < frames; j++) {
                        if (frame[j] == -1) {
                            counter++;
                            frame[j] = pages[i];
                            time[j] = counter;
                            flag2 = 1;
                            pageFaults++;
                            break;
                        }
                    }
                }
                if (flag2 == 0) {
                    int pos = findLRU(time, frames);
                    counter++;
                    frame[pos] = pages[i];
                    time[pos] = counter;
                    pageFaults++;
                }

                printf("Frames: ");
                for (k = 0; k < frames; k++)
                    if (frame[k] != -1) printf("%d ", frame[k]);
                printf("\n");
            }
            printf("Total Page Faults = %d\n", pageFaults);
        }

        else if (choice == 3) {
            // ---------- Optimal ----------
            printf("\nOptimal Page Replacement\n");
            for (i = 0; i < n; i++) {
                int flag1 = 0, flag2 = 0;
                for (j = 0; j < frames; j++) {
                    if (frame[j] == pages[i]) {
                        flag1 = flag2 = 1;
                        break;
                    }
                }
                if (flag1 == 0) {
                    for (j = 0; j < frames; j++) {
                        if (frame[j] == -1) {
                            frame[j] = pages[i];
                            flag2 = 1;
                            pageFaults++;
                            break;
                        }
                    }
                }
                if (flag2 == 0) {
                    int pos = -1, farthest = i + 1;
                    for (j = 0; j < frames; j++) {
                        int found = 0;
                        for (k = i + 1; k < n; k++) {
                            if (frame[j] == pages[k]) {
                                found = 1;
                                if (k > farthest) {
                                    farthest = k;
                                    pos = j;
                                }
                                break;
                            }
                        }
                        if (found == 0) {
                            pos = j;
                            break;
                        }
                    }
                    frame[pos] = pages[i];
                    pageFaults++;
                }
                printf("Frames: ");
                for (k = 0; k < frames; k++)
                    if (frame[k] != -1) printf("%d ", frame[k]);
                printf("\n");
            }
            printf("Total Page Faults = %d\n", pageFaults);
        }

        else {
            printf("Invalid choice!\n");
        }
    }

    return 0;
}
